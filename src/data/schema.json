{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Product list",
    "type": "object",
    "properties": {
        "products": {
            "type": "array",
            "items": {
                "$ref": "#definitions/product"
            }
        }
    },
    "definitions": {
        "product": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "cost": {
                    "type": "number",
                    "minimum": 0
                },
                "icon": {
                    "type": "string"
                },
                "saleCost": {
                    "type": "number",
                    "minimum": 0
                },
                "saleQuantity": {
                    "type": "number",
                    "minimum": 0
                },
                "superSaleCost": {
                    "type": "number",
                    "minimum": 0
                },
                "superSaleQuantity": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": ["id", "name", "icon", "cost"]
        }
    }
}
